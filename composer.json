{
  "name": "atk4/core",
  "type": "library",
  "description": "Agile Core - collection of PHP Traits for designing object-oriented frameworks",
  "keywords": [
    "php",
    "framework",
    "traits",
    "agile toolkit"
  ],
  "homepage": "https://github.com/atk4/core",
  "license": "MIT",
  "authors": [
    {
      "name": "Romans Malinovskis",
      "email": "romans@agiletoolkit.org",
      "homepage": "https://nearly.guru/"
    },
    {
      "name": "Imants Horsts",
      "homepage": "https://darkside.lv/"
    },
    {
      "name": "Francesco Danti",
      "homepage": "https://oracoltech.com/"
    },
    {
      "name": "Michael Voříšek",
      "homepage": "https://mvorisek.cz/"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.3.0",
    "ext-json": "*",
    "psr/log": "~1.0",
    "symfony/polyfill-php74": "^1.17",
    "symfony/polyfill-php80": "^1.17",
    "symfony/yaml": ">=3.4"
  },
  "require-dev": {
    "atk4/data": "~2.2.0",
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpunit/phpunit": ">=9.0",
    "symfony/contracts": ">=1.1"
  },
  "autoload": {
    "psr-4": {
      "atk4\\core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "atk4\\core\\tests\\": "tests/"
    }
  }
}
