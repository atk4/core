<phpunit bootstrap="vendor/autoload.php" printerClass="Atk4\Core\Phpunit\ResultPrinter" colors="true">
    <testsuites>
        <testsuite name="tests">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <groups>
        <exclude>
            <group>require_session</group>
        </exclude>
    </groups>
    <listeners>
        <listener class="JohnKary\PHPUnit\Listener\SpeedTrapListener" />
    </listeners>
    <coverage>
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <exclude>
            <file>src/Phpunit/ResultPrinter.php</file>
            <file>src/Phpunit/TestCase.php</file>
        </exclude>
        <report>
            <php outputFile="coverage/phpunit.cov" />
        </report>
    </coverage>
</phpunit>
